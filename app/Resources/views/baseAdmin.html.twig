{# app/Resources/views/baseAdmin.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <!-- maximum-scale=1.0 is now deprecated -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Martin aurelien">
    <meta name="description" content="RL Négoce Auto est un vendeur de voiture d'occasion avec garantie">
    <meta name="keywords" content="vehicule d'occasion, utilitaire d'occasion, garantie, roubaix, occasion">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

    <title>RL Négoce Auto - Admin{% block title %}{% endblock %}</title>

    <!-- CSS -->
    <link rel="stylesheet" href="{{ asset('asset/css/bootstrap/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/admin.css') }}">
    <link href="{{ asset('asset/css/font-awesome/font-awesome.min.css') }}" rel="stylesheet" type="text/css">



    {% block stylesheets %}
    {% endblock %}

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('asset/img/Logo.jpg') }}">
</head>
<body>
{% block header %}
    <nav class="navbar navbar-inverse navbar-fixed-left">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('homepage') }}"><img src="{{ asset('????') }}" class="navbar-brand" alt="logo" title="" /></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('list') }}">Liste des demande de documents</a></li>
                    <li><a href="{{ path('fos_user_profile_edit') }}">Mon compte</a></li>
                    <li><a href="{{ path('homepage') }}">Retourner sur le site web</a></li>


                    <li class="log-out">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <a class="color-logout" href="{{ path('fos_user_security_logout') }}">
                                <span class="fa fas fa-power-off"></span>
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

<!-- Display all flash message -->
{% if app.flashes is defined %}
    <div class="position-fixed">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} fade in alert-custom">
                    {{ message|raw }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}

{% block body %}
{% endblock %}


<script src="{{ asset('asset/js/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('asset/js/bootstrap/bootstrap.min.js') }}"></script>
{% block javascripts %}
{% endblock %}

</body>
</html>

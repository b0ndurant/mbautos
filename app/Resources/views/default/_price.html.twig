<!-- Modal introducing the price form to set final deal  -->
{{ form_start(form, {'action': path('price', {'document': document.id })}) }}
<div class="modal fade col-xs-12" id="pop-up-price-document-{{ document.id }}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-info" role="document">
        <div class="modal-content">
            <!--Modal's header-->
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fas fa-times" style="color: #999999;" aria-hidden="true"></i></span>
                </button>
                <div class="col-sm-10 col-sm-offset-1">
                    <!--document's final deal set-->
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group form-error text-center">
                                <p class="mb-20">{{ form_label(form.price, 'Nouveau montant suite à l\'accord passé entre les deux parties') }}</p>
                                <p class="light-blue-subtitle-text">{{ form_widget(form.price, {'attr': {'class':'form-control input-field'} }) }}</p>
                                {{ form_errors(form.price) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Activity's PDF Upload-->
            <div class="modal-body">
                <input type="submit" value="Enregistrer" class="btn btn-primary backblue-btn">
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}